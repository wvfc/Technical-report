<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edRazaoSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Razão Social"
            android:inputType="textPersonName"
            android:textColor="@color/textDark"
            android:hintTextColor="@color/hintGray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edNomeFantasia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome Fantasia"
            android:inputType="textPersonName"
            android:textColor="@color/textDark"
            android:hintTextColor="@color/hintGray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNPJ/CPF"
            android:inputType="text"
            android:textColor="@color/textDark"
            android:hintTextColor="@color/hintGray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Endereço"
            android:inputType="textPostalAddress"
            android:textColor="@color/textDark"
            android:hintTextColor="@color/hintGray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/textDark"
            android:hintTextColor="@color/hintGray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="phone"
            android:textColor="@color/textDark"
            android:hintTextColor="@color/hintGray"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/edWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WhatsApp"
            android:inputType="phone"
            android:textColor="@color/textDark"
            android:hintTextColor="@color/hintGray"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSalvarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar cliente"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <!-- BOTÃO VOLTAR -->
        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>
