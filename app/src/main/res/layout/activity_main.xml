<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relatório Técnico"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Bloco Ajuda Técnico -->
            <Button
                android:id="@+id/btnGrupoAjuda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajuda Técnico"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutAjuda"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnSenhasIhms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Senhas e IHMs"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnPdfsMaquinas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PDFs Máquinas"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnDuvidasComuns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dúvidas Comuns"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Bloco Relatórios -->
            <Button
                android:id="@+id/btnGrupoRelatorios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relatórios"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutRelatorios"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnNovoRelatorioCompressor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relatório Compressor"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnNovoRelatorioGeral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relatório Geral"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnHistoricoRelatorios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Histórico de Relatórios"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Bloco Cadastros -->
            <Button
                android:id="@+id/btnGrupoCadastros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastros"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutCadastros"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnCadastroCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar Cliente"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnCadastroMaquina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar Máquina"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnCadastroTecnico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar Técnico"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnClientesCadastrados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clientes Cadastrados"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnMaquinasCadastradas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Máquinas Cadastradas"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnTecnicosCadastrados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Técnicos Cadastrados"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
