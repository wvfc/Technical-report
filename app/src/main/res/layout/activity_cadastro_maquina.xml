<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight">

    <!-- Barra de título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloCadastroMaquina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar Máquina"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Cliente dono da máquina -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spClienteMaquina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edMarcaFabricante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca do fabricante"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edModeloMaquina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modelo da máquina"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edModeloIhm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modelo da IHM"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edNumeroSerie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de série"
                android:padding="8dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnFotoPlaqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecionar foto da plaqueta"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnFotoCompressor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecionar foto do compressor"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSalvarMaquina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALVAR MÁQUINA"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_margin="16dp" />

</LinearLayout>
