<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CARD: DADOS DO CLIENTE / ATENDIMENTO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/surfaceCard"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvTituloDados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dados do cliente e atendimento"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Cliente -->
            <TextView
                android:id="@+id/tvCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/btn_dropdown" />

            <!-- Datas -->
            <TextView
                android:id="@+id/tvDataEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data e hora de entrada"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edDataEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:hint="Toque para selecionar"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDataSaida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data e hora de saída"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edDataSaida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:hint="Toque para selecionar"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:layout_marginBottom="8dp" />

            <!-- Modelo máquina -->
            <TextView
                android:id="@+id/tvModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo da máquina"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edModeloMaquina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex.: GA90 VSD FF"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:layout_marginBottom="8dp" />

