<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CARD: DADOS DO CLIENTE / ATENDIMENTO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/surfaceCard"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvTituloDados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dados do cliente e atendimento"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Cliente -->
            <TextView
                android:id="@+id/tvCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliente"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/btn_dropdown" />

            <!-- Datas -->
            <TextView
                android:id="@+id/tvDataEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data e hora de entrada"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edDataEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:hint="Toque para selecionar"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDataSaida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data e hora de saída"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edDataSaida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:hint="Toque para selecionar"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:layout_marginBottom="8dp" />

            <!-- Modelo máquina -->
            <TextView
                android:id="@+id/tvModelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo da máquina"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edModeloMaquina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex.: GA90 VSD FF"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:layout_marginBottom="8dp" />

            <!-- Tipo manutenção -->
            <TextView
                android:id="@+id/tvTipoManutencao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de manutenção"
                android:textColor="@color/textPrimary"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spTipoManutencao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/btn_dropdown" />
        </LinearLayout>

        <!-- ESPAÇO -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- CARD: CHECKLIST COMPRESSOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/surfaceCard"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvTituloChecklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checklist do compressor"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- ========= ITEM 1 ========= -->
            <TextView
                android:id="@+id/tvItem1Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 - Total de horas de funcionamento (em carga)"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <Spinner
                android:id="@+id/spItem1Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/edItem1Valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Horas em carga / observações"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="text" />

            <!-- ========= ITEM 2 ========= -->
            <TextView
                android:id="@+id/tvItem2Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 - Pressão de descarga do pacote (carga/alívio)"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <Spinner
                android:id="@+id/spItem2Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/edItem2Valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Pressão / observações"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="text" />

            <!-- AQUI PODERIAM IR ITENS 3 A 35, SE VOCÊ QUISER DETALHAR DEPOIS -->

            <!-- ========= ITEM 36 ========= -->
            <TextView
                android:id="@+id/tvItem36Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="36 - Dados da placa de identificação do motor (HP/kW, RPM, V, A)"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spItem36Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/edItem36HpKw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="HP/kW"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintGray"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/edItem36Rpm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:hint="RPM"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintGray"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/edItem36V"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Tensão (V)"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintGray"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/edItem36A"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:hint="Corrente (A)"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintGray"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <!-- ========= ITEM 37 ========= -->
            <TextView
                android:id="@+id/tvItem37Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="37 - Inspecionar os contatores"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spItem37Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/edItem37Obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Observações sobre contatores"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="textMultiLine" />

            <!-- ========= ITEM 38 ========= -->
            <TextView
                android:id="@+id/tvItem38Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="38 - Verificar as conexões elétricas"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spItem38Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/edItem38Obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Observações das conexões elétricas"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="textMultiLine" />

            <!-- ========= ITEM 39 ========= -->
            <TextView
                android:id="@+id/tvItem39Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="39 - Temp. operacional HAT (°C) / corte de alta temperatura"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spItem39Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/edItem39Valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Temperatura / observações"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="text" />

            <!-- ========= ITEM 40 ========= -->
            <TextView
                android:id="@+id/tvItem40Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40 - Ponto de orvalho (°C)"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spItem40Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/edItem40PontoOrvalho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Ponto de orvalho (°C)"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="numberDecimal" />

            <!-- ========= ITEM 41 ========= -->
            <TextView
                android:id="@+id/tvItem41Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="41 - Pré-filtro (referência / observações)"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spItem41Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/edItem41Ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Referência / observações do pré-filtro"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="textMultiLine" />

            <!-- ========= ITEM 42 ========= -->
            <TextView
                android:id="@+id/tvItem42Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="42 - Pós-filtro (referência / observações)"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spItem42Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown" />

            <EditText
                android:id="@+id/edItem42Ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="Referência / observações do pós-filtro"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="textMultiLine" />

            <!-- OBSERVAÇÕES GERAIS -->
            <TextView
                android:id="@+id/tvObservacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observações gerais"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/edObservacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="top|start"
                android:hint="Descreva observações gerais da inspeção..."
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/hintGray"
                android:inputType="textMultiLine" />

            <!-- BOTÕES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnSelecionarImagens"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Selecionar imagens"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/buttonSecondary" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btnSalvarRelatorio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salvar relatório"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/buttonPrimary" />
            </LinearLayout>

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:textColor="@color/white"
                android:backgroundTint="@color/buttonSecondary"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>